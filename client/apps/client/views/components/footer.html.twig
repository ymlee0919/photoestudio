<div class="container-fluid primary-dark-bg text-light footer py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-3 col-md-6">
                <h4 class="text-white mb-4">{{ business.businessName }}</h4>
                <p class="mb-2">Más que fotos, creamos emociones</p>
                
            </div>
            
            <div class="col-lg-3 col-md-6">
                <h4 class="text-white mb-4">Servicios</h4>
                {% for service in servicesList %}
                <p class="mb-2 light-text">{{ service.service }}</p>
                {% endfor %}
            </div>
            <div class="col-lg-3 col-md-6">
                <h4 class="text-white mb-4">Enlaces</h4>
                <a class="btn btn-link" href="/">Inicio</a>
                <a class="btn btn-link" href="/offers">Ofertas</a>
                <a class="btn btn-link" href="/gallery">Galería</a>
                <a class="btn btn-link" href="/contact">Contacto</a>
            </div>
            <div class="col-lg-3 col-md-6">
                <h4 class="text-white mb-4">Nuestro estudio</h4>
                <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>{{ business.address }}</p>
                <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>{{ business.phone }}</p>
                <p class="mb-2"><i class="fa fa-envelope me-3"></i>{{ business.email }}</p>
                <div class="d-flex pt-2">
                    <a class="btn btn-square btn-outline-light rounded-circle me-2" href=""><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-square btn-outline-light rounded-circle me-2" href=""><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-square btn-outline-light rounded-circle me-2" href=""><i class="fab fa-youtube"></i></a>
                    <a class="btn btn-square btn-outline-light rounded-circle me-2" href=""><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>